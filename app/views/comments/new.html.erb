<div class="row form">
  <div class="col-lg-12">
    <%= form_for(@comment) do |f| %>
      <h3><span>投稿者：</span><%= @event.user.nickname %></h3>
      <h3><span>日付：</span><%= @event.event_date %></h3>
      <h3><span>エリア：</span><%= @event.prefecture %></h3>
      <div class="form-group">
        <%= f.text_area :text, placeholder: "コメントを入力してください", cols:"30", rows:"10", autofocus:"true", class:"form-control" %>
      </div>
      <%= f.hidden_field :event_id %>
      <%= f.submit "コメントする", class:"btn"%>
    <% end %>
  </div>
</div>