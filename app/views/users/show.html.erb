<div class="contents">
	<div class="profile">
	    <% if @user.id == current_user.id %>
	      <%= link_to "プロフィール編集", edit_user_path(current_user) %><br>
	    <% end %>
	    <% if @user.image.attached? %>
	    <p><%= image_tag(rails_blob_path(@user.image),:size => "100x100") %></p>
	    <% else %>
	    <p><%= image_tag("default_user.jpg", :size => "100x100") %></p>
	    <% end %>

		ニックネーム：<%= @user.nickname %><br>
		テニス歴：<%= @user.career %><br>
		活動エリア：<%= @user.play_erea %><br>
		フリー：<%= @user.profile %><br>
    </div>

    <div class="events">
    	<div class="my_events">
			<p><%= @user.nickname %>さんの企画したイベント</p>
			
			<% @events.each do |event| %>
			<div>
				<%= event.event_date %>
				<%= event.prefecture %>
				<%= link_to 'イベント詳細', "/events/#{event.id}", method: :get %><br>
			</div>
			<% end %>
	    </div>

	    <div class="co_events">
			<p><%= @user.nickname %>さんのコメントしたイベント</p>
			<% @co_events.each do |event| %>
				
				<%= event.event_date %>
				<%= event.prefecture %>
				<%= link_to 'イベント詳細', "/events/#{event.id}", method: :get %><br>

			<% end %>
	    </div>

		<p><%= @user.nickname %>さんのコメント</p>
		<% @comments.each do |comment| %>
			<%= comment.text %>
			<%= link_to 'イベント詳細', "/events/#{comment.event.id}", method: :get %><br>
		<% end %>
	</div>
</div>