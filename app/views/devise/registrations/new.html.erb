<div class="content">

  <div id="sign">

  <h2>新規登録</h2>



  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <p><span class="data"><%= f.label :ニックネーム %></span></p>
      <%= f.text_field :nickname, placeholder: '最大20文字まで',autofocus: true, maxlength: 20 %>
    </div>

    <div class="field">
      <p><span class="data"><%= f.label :email %></span></p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <p><span class="data"><%= f.label :password %></span>

      <%= f.password_field :password, autocomplete: "new-password" %>
      <em><span class="small">(※半角英数字8文字以上、大文字・小文字・数字を1つ以上含める)</span></em></p>

    </div>

    <div class="field">
      <p><span class="data"><%= f.label :パスワード確認 %></span></p>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <p><span class="data"><%= f.label :年齢確認 %></span><span class="small">（※ユーザー登録できるのは２０歳以上の方に限ります)</span><br>
      <%= f.check_box :over20, {} , 1, nil %><span class="data">20歳以上</span></p>
      <p><%= f.check_box :agree, {} , 1, nil %><span class="data"><a href="/terms" class="terms_agree">利用規約</a>に同意する</span></p>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
    <div class="sns_new google">
    <%= link_to "Googleアカウントで新規登録", user_google_oauth2_omniauth_authorize_path %><br />
    </div>
    <div class="sns_new fb">
    <%= link_to "Facebookで新規登録", user_facebook_omniauth_authorize_path %><br />
    </div>
    <div class="sns_new twitter">
    <%= link_to "Twitterで新規登録", user_twitter_omniauth_authorize_path %><br />
    </div>
    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "確認メール再送", new_confirmation_path(resource_name) %><br />
    <% end %>


  <% end %>
  </div>
</div>
