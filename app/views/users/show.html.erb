<div class="content">
	<div class="user_show">
	<h2><%= @user.nickname %></h2>
    <% if user_signed_in? && @user.id == current_user.id %>
      <%= link_to "プロフィール編集", edit_user_path(current_user), class: :edit %><br>
    <% end %>
		<div class="profile">

			<div class="pro_img">
		    <% if @user.image.attached? %>
			    <p><%= image_tag(rails_blob_path(@user.image),:size => "100x100") %></p>
			    <% else %>
			    <p><%= image_tag("default_image.jpg", :size => "100x100") %></p>
		    <% end %>
		    </div>

		    <div class="pro_txt">
				<p><span class="data">ニックネーム　</span><%= @user.nickname %></p>
				<p><span class="data">テニス歴　　　</span><%= @user.career %></p>
				<p><span class="data">活動エリア　　</span><%= @user.play_erea %></p>
				<p><span class="data">フリー　　　　</span><%= @user.profile %></p>
		    </div>
	    </div>

	    <div class="events">
	    	<div class="my_events">
				<p><span class="data"><%= @user.nickname %>さんの企画したイベント</span></p>
				
				<% @events.each do |event| %>
				<div class="my_event">
					<p><%= event.event_date.strftime("%Y/%m/%d") %>｜
				<span class="erea"><%= event.prefecture %></span>
					<%= link_to 'イベント詳細', "/events/#{event.id}", method: :get %>
					　<%= link_to '参加者', "/groups/#{event.id}", method: :get %></p>
				</div>
				<% end %>
				<%= paginate(@events) %>
		    </div>

		    

		    <div class="tab_menu">

		    <% if user_signed_in? && @user.id == current_user.id %>

		    	<ul>
				    <li id="left" class="selected">参加</li>
				    <li id="centor">気になる</li>
				    <li id="right">コメント</li>
				</ul>

				<div class="tab_contents">

				    <div class="left">
				    <p><span class="data"><%= @user.nickname %>さんの参加イベント</span></p>
					    <% @groups.each do |group| %>
					    	<p><%= group.event.event_date.strftime("%Y/%m/%d") %>｜
							<span class="erea"><%= group.event.prefecture %></span>
							<%= link_to 'イベント詳細', "/events/#{group.event.id}", method: :get %>　
							<%= link_to '参加をやめる', "/groups/#{group.id}", method: :delete %></p>
					    <% end %>
					    <%= paginate(@groups) %>
					</div>

				    <div class="centor">
				    <p><span class="data"><%= @user.nickname %>さんの気になるイベント</span></p>
					    <% @like_events.each do |like_event| %>
					    	<p><%= like_event.event.event_date.strftime("%Y/%m/%d") %>｜
							<span class="erea"><%= like_event.event.prefecture %></span>
							<%= link_to 'イベント詳細', "/events/#{like_event.event.id}", method: :get %>　
							<%= link_to '削除', "/like_events/#{like_event.id}", method: :delete %></p>
					    <% end %>
					    <%= paginate(@groups) %>
					</div>

		    <% end %>

				    <div class="right">
				    	<div class="right user_comments">
				    	<p><span class="data"><%= @user.nickname %>さんのコメント</span></p>
						<% @event_comments.each do |event_comment| %>
						<div class="right user_comment">
						    <p>＞＞ <%= event_comment.event.event_date.strftime("%Y/%m/%d") %>｜
							<span class="user_erea"><%= event_comment.event.prefecture %>のイベント　</span>
							<%= link_to 'イベント詳細', "/events/#{event_comment.event.id}", method: :get %></p>
							<p>　<%= event_comment.comment.text %></p>
						</div>
						<% end %>
						<%= paginate(@event_comments) %>
					    </div>
					</div>
			    </div>
		    </div>
    <div class="user_back">
	  <a class="btn" href="/">TOPへ戻る</a>
    </div> 
		</div>

    </div>

</div>